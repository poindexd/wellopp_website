section#stats(style='position:absolute;bottom: 50px; width: 100%')
	.container
		.row.hide-on-med-and-down
			.col.m3.s6: .card.center
				.chart
					.percentage(data-percent='100' data-text='10000' data-bar-color='#2196f3')
						span 10000
						sup +
					p Patient Engagements

			.col.m3.s6: .card.center
				.chart
					.percentage(data-percent='85' data-text='85' data-bar-color='green')
						span 85
						sup %
					p Patient Satisfaction

			.col.m3.s6: .card.center
				.chart
					.percentage(data-percent='50' data-text='29' data-bar-color='orange' data-scale-color='#ddd')
						span 29
					p Minutes Saved

			.col.m3.s6: .card.center
				.chart
					.percentage(data-percent='47' data-text='47' data-bar-color='red')
						span 47
						sup %
					p Readmission Reduction

		.row.hide-on-large-only(style='position: relative; bottom: -40px')
			.col.s12: .card.center
				span 10,000+ Patient Engagements
				.progress.transparent
			.col.s12: .card.center
				span 85% Patient Satisfaction
				.progress.transparent
					.determinate.green(style='width:85%')
			.col.s12: .card.center
				span 29 Minutes Saved
				.progress.transparent
					//.determinate.orange(style='width:75%')
			.col.s12: .card.center
				span 47% Readmission Reduction
				.progress.transparent
					.determinate.red(style='width:47%')